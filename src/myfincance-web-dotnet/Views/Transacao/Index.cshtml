@{
    ViewData["Title"] = "Transações Financeiras";
}

<h1>@ViewData["Title"]</h1>

<button type="button" class="btn btn-primary btn-lg" onclick="Novo()">Registrar transação</button>

<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Data</th>
      <th scope="col">Histórico</th>
      <th scope="col">Valor</th>
      <th scope="col">Tipo Operação</th>
      <th scope="col">Plano Conta</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    @{
      foreach(var item in (List<TransacaoModel>) ViewBag.Transacoes)
      {
        <tr>
          <th scope="row">@item.Id</th>
          <td>@item.Data</td>
          <td>@item.Historico</td>
          <td>@item.Valor</td>
          <td>@item.ItemPlanoConta.Descricao</td>
          <td>@item.ItemPlanoConta.Tipo</td>
          <td><button class="btn btn-primary" type="button" onclick="Editar(@item.Id.ToString())">EDITAR</button></td>
          <td><button class="btn btn-danger" type="button" onclick="Excluir(@item.Id.ToString())">EXCLUIR</button></td>
        </tr>
      }
    }
  </tbody>
</table>

<script>
    function Novo()
    {
        window.location.href = "../Transacao/Cadastro"
    }

    function Editar(id)
    {
        window.location.href = "../Transacao/Cadastro/" + id
    }

    function Excluir(id)
    {
        window.location.href = "../Transacao/Excluir/" + id
    }
</script>